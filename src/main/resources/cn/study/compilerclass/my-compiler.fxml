                    <columnResizePolicy>
                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                  </TableView>
                        <TreeView fx:id="resultTreeView" maxHeight="1.7976931348623157E308" styleClass="result-tree" VBox.vgrow="ALWAYS" />
                  <HBox fx:id="ResultHBox" VBox.vgrow="ALWAYS">
                    <children>
                      <TextArea fx:id="lineNumbersResult" editable="false" focusTraversable="false" prefWidth="40" styleClass="line-number" />
                      <TextArea fx:id="resultArea" editable="false" styleClass="result-area" HBox.hgrow="ALWAYS" />
                    </children>
                  </HBox>
                     </children>
                  </VBox>
            <TitledPane fx:id="outPane" contentDisplay="CENTER" expanded="false" graphicTextGap="2.0" text="输出">
              <content>
                <TextArea fx:id="outArea" editable="false" />
              </content>
            </TitledPane>
          </children>
        </VBox>
      </items>
    </SplitPane>
